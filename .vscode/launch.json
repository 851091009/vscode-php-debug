{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug adapter",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--harmony"
            ],
            "program": "${workspaceRoot}/src/phpDebug.ts",
            "stopOnEntry": false,
            "args": [
                "--server=4711"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/out"
        },
        {
            "name": "Launch Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}"
            ],
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/out"
        },
        {
            "name": "Run Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}node_modules/mocha/bin/_mocha",
            "args": [
                "./out/tests",
                "--timeout",
                "999999",
                "--colors"
            ],
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/out"
        }
    ]
}